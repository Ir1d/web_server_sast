                  input(type="hidden" name="contest" value="#{detail}")
                  input(type="hidden" name="action" value="prize_contest")
                  input(type="hidden" name="prize" value="2")
                  input.text.team(name="team_id" value="队伍的id" onfocus="if(this.value==='队伍的id') this.value=''" onblur="if(this.value==='') this.value='队伍的id'")
            form(action="/admin", method="get")
              .wecome-button
                  input.btn.waves-effect.waves-light(type="submit" value="决定这个队伍得到三等奖")
                  input(type="hidden" name="id" value="#{id}")
                  input(type="hidden" name="contest" value="#{detail}")
                  input(type="hidden" name="action" value="prize_contest")
                  input(type="hidden" name="prize" value="3")
                  input.text.team(name="team_id" value="队伍的id" onfocus="if(this.value==='队伍的id') this.value=''" onblur="if(this.value==='') this.value='队伍的id'")
          .col.s4.feature-accord
            form(action="/admin", method="get")
              .wecome-button
                  input.btn.waves-effect.waves-light(type="submit" value="下载某个队伍作品")
                  input(type="hidden" name="id" value="#{id}")
                  input(type="hidden" name="contest" value="#{detail}")
                  input(type="hidden" name="action" value="download_work_id")
                  input.text.team(name="team_id" value="队伍的id" onfocus="if(this.value==='队伍的id') this.value=''" onblur="if(this.value==='') this.value='队伍的id'")
            form(action="/admin", method="get")
              .wecome-button
                  input.btn.waves-effect.waves-light(type="submit" value="下载所有队伍作品")
                  input(type="hidden" name="id" value="#{id}")
                  input(type="hidden" name="contest" value="#{detail}")
                  input(type="hidden" name="action" value="download_works")

            .wecome-button
              a.btn.waves-effect.waves-light(href='/admin/?id=#{id}&action=contests')
                | 返回
                span
