extends layout

block content
  script.
    $('#CONTESTS').addClass('active')
  .container
    .row
      if(job==="contest")
        if(detail === "acm")
          h2 ACM校内赛比赛管理
        else if(detail === "jiying")
          h2 计算机应用设计大赛管理
        .featured-main
          .col.s4.feature-accord
            ul.topic_grid
              li.list1
                h3.m_3 在这里为队伍签到
              .clear5
            form(action="/admin", method="get")
              .wecome-button
                  input.btn.waves-effect.waves-light(type="submit" value="为这个队伍签到")
                  input(type="hidden" name="id" value="#{id}")
                  input(type="hidden" name="contest" value="#{detail}")
                  input(type="hidden" name="action" value="check_contest")
                  input.text.team(name="team_id" value="队伍的id" onfocus="if(this.value==='队伍的id') this.value=''" onblur="if(this.value==='') this.value='队伍的id'")
          .col.s4.feature-accord
            ul.topic_grid
              li.list1
                h3.m_3 在这里为队伍登记成绩
              .clear5
            form(action="/admin", method="get")
              .wecome-button
                  input.btn.waves-effect.waves-light(type="submit" value="决定这个队伍得到一等奖")
                  input(type="hidden" name="id" value="#{id}")
                  input(type="hidden" name="contest" value="#{detail}")
                  input(type="hidden" name="action" value="prize_contest")
