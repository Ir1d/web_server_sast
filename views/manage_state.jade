extends layout

block content
  .featured-section
    .header-top.bg
    .container
      if(job==="contest")
        if(detail === "acm")
          h2 ACM校内赛比赛管理
        else if(detail === "jiying")
          h2 计算机应用设计大赛管理
        .featured-main
          .col-md-4.feature-accord
            ul.topic_grid
              li.list1
                h3.m_3 在这里为队伍签到
              .clear5
            style.
              .team{
                width: 100%;
                height: 55px;
                padding: 5px 5px;
                font-size: 20px;
              }
            form(action="/admin", method="get")
              .wecome-button
                  input.button.rotate2(type="submit" value="为这个队伍签到")
                  input(type="hidden" name="id" value="#{id}")
                  input(type="hidden" name="contest" value="#{detail}")
                  input(type="hidden" name="action" value="check_contest")
                  input.text.team(name="team_id" value="队伍的id" onfocus="if(this.value==='队伍的id') this.value=''" onblur="if(this.value==='') this.value='队伍的id'")
